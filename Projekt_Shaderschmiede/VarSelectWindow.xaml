<Window x:Class="Projekt_Shaderschmiede.VarSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_Shaderschmiede"
        mc:Ignorable="d"
        Title="VarSelectWindow" Height="431" Width="578" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF2A2A2A">
    <Grid Margin="0,0,0,4">
        <Button x:Name="SaveBtn" Content="Save" HorizontalAlignment="Left" Height="20" Margin="212,361,0,0" VerticalAlignment="Top" Width="78" Click="SaveBtn_Click" Foreground="#FFBDBDF9" BorderBrush="#FF6464C8" Background="{x:Null}"/>
        <ListBox x:Name="LBVar" HorizontalAlignment="Left" Height="258" Margin="10,10,0,0" VerticalAlignment="Top" Width="549" d:ItemsSource="{d:SampleData ItemCount=5}" Foreground="#FFBDBDF9" Background="{x:Null}" BorderBrush="#FF6464C8"/>
        <TextBox x:Name="TB_Name" HorizontalAlignment="Left" Margin="10,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24" BorderBrush="#FF6464C8" Background="{x:Null}"/>
        <TextBox x:Name="TB_Desc" HorizontalAlignment="Left" Margin="135,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217" Height="24" BorderBrush="#FF6464C8" Background="{x:Null}"/>
        <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="319,361,0,0" VerticalAlignment="Top" Height="20" Width="78" Click="CancelBtn_Click" BorderBrush="#FF6464C8" Background="{x:Null}" Foreground="#FFBDBDF9"/>
        <ComboBox x:Name="CB_Type" HorizontalAlignment="Left" Margin="357,299,0,0" VerticalAlignment="Top" Width="119" Height="24" SelectionChanged="CB_Type_SelectionChanged" Foreground="#FFBDBDF9" BorderBrush="#FF6464C8" Background="{x:Null}"/>
        <TextBox x:Name="TB_Val" HorizontalAlignment="Left" Margin="481,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.502,-0.647" Height="24" Background="{x:Null}" BorderBrush="#FF6464C8"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,273,0,0" VerticalAlignment="Top" Foreground="#FFBDBDF9" Background="{x:Null}"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="135,273,0,0" VerticalAlignment="Top" Foreground="#FFBDBDF9" Background="{x:Null}"/>
        <Label Content="Type" HorizontalAlignment="Left" Margin="357,273,0,0" VerticalAlignment="Top" Foreground="#FFBDBDF9"/>
        <Label Content="Default" HorizontalAlignment="Left" Margin="481,273,0,0" VerticalAlignment="Top" Foreground="#FFBDBDF9"/>
        <Label x:Name="LRLabel" Content="Lower limit" HorizontalAlignment="Left" Margin="12,328,0,0" VerticalAlignment="Top" IsEnabled="False" Foreground="#FFBDBDF9" Background="{x:Null}"/>
        <Label x:Name="URLabel" Content="Upper limit" HorizontalAlignment="Left" Margin="257,328,0,0" VerticalAlignment="Top" IsEnabled="False" Foreground="#FFBDBDF9" Background="{x:Null}"/>
        <TextBox x:Name="TB_LR" HorizontalAlignment="Left" Margin="111,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" BorderBrush="#FF6464C8" Background="{x:Null}"/>
        <TextBox x:Name="TB_UR" HorizontalAlignment="Left" Margin="356,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" BorderBrush="#FF6464C8" Background="{x:Null}"/>
        <Button x:Name="DelBtn" Content="Delete index" HorizontalAlignment="Left" Margin="481,331,0,0" Width="79" Click="DelBtn_Click" Height="19" VerticalAlignment="Top" Foreground="#FFBDBDF9" BorderBrush="#FF6464C8" Background="{x:Null}"/>

    </Grid>
</Window>
